@using AlpineSkiHouse.Models.SkiCardViewModels

@model EditSkiCardViewModel

@{
    ViewData["Title"] = "Edit Ski Card";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="SkiCard" asp-action="Edit" method="post" class="form-horizontal">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <p class="text-info">
        Edit details for ski card.
    </p>
    <input asp-for="Id" type="hidden"/>

    <div class="form-group">
        <label asp-for="CardHolderFirstName"></label>
        <input asp-for="CardHolderFirstName" class="form-control" />
        <span asp-validation-for="CardHolderFirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardHolderLastName"></label>
        <input asp-for="CardHolderLastName" class="form-control" />
        <span asp-validation-for="CardHolderLastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardHolderBirthDate"></label>
        <input asp-for="CardHolderBirthDate" class="form-control" />
        <span asp-validation-for="CardHolderBirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardHolderPhoneNumber"></label>
        <input asp-for="CardHolderPhoneNumber" class="form-control" />
        <span asp-validation-for="CardHolderPhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}




